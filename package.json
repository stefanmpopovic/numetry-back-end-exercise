{
  "name": "NodeJsBaseProject",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --watch \"src/\" --exec \"ts-node ./src/server.ts\" -e ts",
    "ts-build": "tsc",
    "ts-prod": "npm run ts-build && node dist/server.js",
    "prod": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "run-prod": "npm run lint && npm run test && npm run prod && node dist/server.js",
    "test:coverage": "jest --coverage",
    "test": "jest --no-cache",
    "lint": "npx eslint . --ext .js,.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.0",
    "@types/supertest": "^2.0.9",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "global": "^4.4.0",
    "i": "^0.3.6",
    "jest": "^26.0.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@types/cors": "^2.8.6",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-typescript": "^8.0.2",
    "eslint-plugin-import": "^2.22.0",
    "nodemon": "^2.0.4",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.6"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/coverage/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "./src/**/*.{ts,js}",
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  }
}
